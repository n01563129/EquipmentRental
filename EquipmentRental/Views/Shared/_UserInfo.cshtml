@{
    bool isLoggedIn = (User != null && User.Identity != null && User.Identity.IsAuthenticated);
    var userName = Session["UserName"] as string;
    var userRole = Session["UserRole"] as string;
}

@if (isLoggedIn)
{
    <li class="nav-item">
        <span class="nav-link text-dark">
            Hello, @userName (@(userRole ?? "User"))
        </span>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="@Url.Action("Logout", "User")">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="@Url.Action("Register", "User")">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="@Url.Action("Login", "User")">Login</a>
    </li>
}
