@{
    bool isLoggedIn = (Session["UserID"] != null);
    bool isAdmin = (Session["UserRole"] != null && Session["UserRole"].ToString() == "Admin");
}

<ul class="navbar-nav">
    <li class="nav-item">
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
    </li>
    <li class="nav-item">
        @Html.ActionLink("Equipment", "Index", "Equipment", null, new { @class = "nav-link" })
    </li>
    <li class="nav-item">
        @Html.ActionLink("Rentals", "Index", "Rental", null, new { @class = "nav-link" })
    </li>
    @if (isAdmin)
    {
        <li class="nav-item">
            @Html.ActionLink("Users", "Index", "User", null, new { @class = "nav-link" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Admin", "Index", "Admin", null, new { @class = "nav-link" })
        </li>
    }
</ul>
