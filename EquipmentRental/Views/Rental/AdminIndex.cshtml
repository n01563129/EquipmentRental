@model IEnumerable<EquipmentRental.Models.Rental>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "All Rentals (Admin)";
}

<h2 class="mb-3">All Rentals (Admin)</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <div class="input-group">
            <input id="searchBox" name="q"
                   class="form-control"
                   placeholder="Search rentals…" autocomplete="off" />
            <button id="btnSearch" type="button"
                    class="btn btn-outline-secondary">
                Search
            </button>
        </div>
    </div>
    <div class="col-md-6 text-end">
        <a class="btn btn-secondary" href="@Url.Action("Index", "Rental")">My Rentals</a>
    </div>
</div>

<div id="tableArea">
    @Html.Partial("_RentalTable", Model)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    <script src="https://code.jquery.com/ui/1.13.3/jquery-ui.min.js"></script>
    <link href="https://code.jquery.com/ui/1.13.3/themes/base/jquery-ui.css" rel="stylesheet" />

    <script>
        (function () {

            /* keep last search term across reloads*/
            var key = "adminRentalSearch";
            $("#searchBox").val(localStorage.getItem(key) || "");

            function load() {
                var q = $("#searchBox").val();
                localStorage.setItem(key, q);

                /* load the partial view directly into the DIV*/
                $("#tableArea").load("@Url.Action("AdminIndex")", { q: q });
            }

            $("#btnSearch").on("click", load);
            $("#searchBox").on("keypress", function (e) {
                if (e.which === 13) {  
                    e.preventDefault();
                    load();
                }
            });

            $("#searchBox").autocomplete({
                minLength: 2,
                source: function (req, res) {
                    $.getJSON("@Url.Action("AutoComplete")", { term: req.term }, res);
                },
                select: function (e, ui) {
                    $("#searchBox").val(ui.item.value);
                    load();
                }
            });

        })();
    </script>
}
