@model EquipmentRental.Models.Rental

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Delete Rental";
    var equipmentName = Model.Equipment != null
        ? ((EquipmentRental.Models.Equipment)Model.Equipment).Name
        : "";
    var renterName = Model.Renter != null
        ? ((EquipmentRental.Models.User)Model.Renter).Name
        : "";
}

<h2 class="mb-4">Delete Rental</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this rental?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Equipment</dt>
            <dd class="col-sm-8">@equipmentName</dd>

            <dt class="col-sm-4">Renter</dt>
            <dd class="col-sm-8">@renterName</dd>

            <dt class="col-sm-4">Start Date</dt>
            <dd class="col-sm-8">@Model.RentalStartDate.ToShortDateString()</dd>

            <dt class="col-sm-4">End Date</dt>
            <dd class="col-sm-8">@Model.RentalEndDate.ToShortDateString()</dd>

            <dt class="col-sm-4">Total Cost</dt>
            <dd class="col-sm-8">@Model.TotalCost.ToString("C")</dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="d-flex gap-2">
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
